{
  "info": {
    "_postman_id": "f2dd1b2b-1d3d-46d0-9a9a-ndl-demo",
    "name": "numbers-dont-lie",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health (GET /health)",
      "request": {
        "method": "GET",
        "header": [],
        "url": "http://localhost:8080/health"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test(\"ok = true\", function () {",
              "  const body = pm.response.json();",
              "  pm.expect(body.ok).to.eql(true);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Auth - Register (POST /auth/register)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": "http://localhost:8080/auth/register"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 201 Created\", function () {",
              "  pm.response.to.have.status(201);",
              "});",
              "pm.test(\"Response has user.email\", function () {",
              "  const body = pm.response.json();",
              "  pm.expect(body.user.email).to.eql(\"test@example.com\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Auth - Duplicate Register (409 expected)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": "http://localhost:8080/auth/register"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 409 Conflict\", function () {",
              "  pm.response.to.have.status(409);",
              "});",
              "pm.test(\"Has error message\", function () {",
              "  const body = pm.response.json();",
              "  pm.expect(body.error).to.eql(\"User already exists\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
